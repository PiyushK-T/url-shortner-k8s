      <li><a href="/login">LOGIN</a></li>
      {{/unless}}

      {{#unless onSignupPage}}
      <li><a href="/signup">SIGN UP</a></li>
      {{/unless}}
      {{/unless}}

    </ul>
  </nav>
  <div id="user-data" data-user='{{{json user}}}'></div>
