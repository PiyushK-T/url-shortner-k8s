<header>
  <nav class="navbar">
    <div class="logo">
      <a href="/home"><img src="/public/images/logo_dark.png" alt="ServiceEasy Logo"></a>
    </div>
    <ul class="nav-links">

      {{!-- if logged in --}}
      {{#if user}}
      <li><a href="/dashboard">DASHBOARD</a></li>
      <li><a href="/logout">LOGOUT</a></li>
      {{/if}}

      {{!-- not logged in --}}
      {{#unless user}}
